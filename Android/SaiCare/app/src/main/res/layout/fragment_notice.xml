<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@color/light"
    tools:context="com.sai.app.saicare.NoticeFragment">



    <RelativeLayout
        android:background="@drawable/semi_circle2"
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_notice2"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <TextView
            android:id="@+id/ttt"
            android:textSize="24dp"
            android:textColor="@color/dark"
            android:text="NOTICES"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="80dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>


    <android.support.v7.widget.CardView
        android:layout_marginTop="120dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="20dp"
        card_view:cardBackgroundColor="@color/white"
        android:elevation="40dp"
        android:id="@+id/back_notice">

        <RelativeLayout
            android:id="@+id/noticesection"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:id="@+id/notice_list"
                android:scrollbars="none"
                android:overScrollMode="never"
                android:divider="@color/light"
                android:dividerHeight="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            </ListView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ttmp"
            android:gravity="center"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ssss"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ic_empty_book"
                android:layout_width="100dp"
                android:layout_height="100dp" />


            <TextView
                android:layout_below="@+id/ssss"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="@color/dark"
                android:text="Notices Unavailable\nStay Tuned"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>
