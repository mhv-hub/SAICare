                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <Button
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/one"
                    android:id="@+id/eight"
                    android:layout_toEndOf="@+id/seven"
