<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light"
    tools:context="com.sai.app.saicare.AppointmentFormActivity">

    <RelativeLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/imgg"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_app_two"
            android:layout_width="24dp"
            android:layout_height="24dp" />

        <TextView
            android:textSize="18dp"
            android:textColor="@color/white"
            android:text="APPOINTMENT FORM"
            android:layout_toEndOf="@+id/imgg"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/book"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="BOOK"
            android:textStyle="bold"
            android:background="@drawable/book_button_two"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:layout_width="80dp"
            android:layout_height="50dp" />

    </RelativeLayout>

    <ScrollView
        android:layout_marginTop="50dp"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/form"
                android:paddingTop="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:singleLine="true"
                    android:layout_toLeftOf="@+id/gender"
                    android:inputType="textPersonName"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/formtextbox"
                    android:hint="Enter patient name"
                    android:textColorHint="@color/dark"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="5dp"
                    android:textColor="@color/dark"
                    android:textSize="15dp"/>


                <Spinner
                    android:layout_alignParentRight="true"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:background="@drawable/formtextbox"
                    android:id="@+id/gender"/>


                <EditText
                    android:id="@+id/mobile"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@id/name"
                    android:singleLine="true"
                    android:inputType="phone"
                    android:layout_toLeftOf="@+id/age"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/formtextbox"
                    android:hint="Enter mobile number here"
                    android:textColorHint="@color/dark"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/dark"
                    android:textSize="15dp"/>

                <EditText
                    android:layout_alignParentRight="true"
                    android:id="@+id/age"
                    android:maxLength="2"
                    android:inputType="number"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_below="@id/name"
                    android:background="@drawable/formtextbox"
                    android:hint="Age"
                    android:textColorHint="@color/dark"
                    android:gravity="left|center_vertical"
                    android:singleLine="true"
                    android:paddingLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/dark"
                    android:textSize="15dp"/>



                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@id/age"
                    android:singleLine="true"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/formtextbox"
                    android:hint="Enter email id here"
                    android:textColorHint="@color/dark"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/dark"
                    android:textSize="15dp"/>



                <EditText
                    android:id="@+id/reffered"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@id/email"
                    android:singleLine="true"
                    android:inputType="textPersonName"
                    android:background="@drawable/formtextbox"
                    android:hint="Referred by ( Doctor name )"
                    android:textColorHint="@color/dark"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/dark"
                    android:textSize="15dp"/>



                <EditText
                    android:id="@+id/address"
                    android:inputType="textMultiLine"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:paddingTop="2dp"
                    android:layout_below="@id/reffered"
                    android:background="@drawable/formtextbox"
                    android:hint="Enter your address"
                    android:textColorHint="@color/dark"
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/dark"
                    android:textSize="15dp"/>

                <TextView
                    android:layout_below="@id/address"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp"
                    android:layout_height="wrap_content"
                    android:text="SELECT SERVICES YOU NEED"/>

            </RelativeLayout>

